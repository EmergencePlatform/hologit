        {
            "type": "node",
            "request": "launch",
            "name": "project",
            "cwd": "${workspaceFolder:hologit-debug-context}",
            "env": {
                "DEBUG": true,
                "PATH": "/hab/bin"
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "project",

                // holobranch
                "site",

                // target-branch
                "site"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "watch",
            "cwd": "${workspaceFolder:hologit-debug-context}",
            "env": {
                "DEBUG": true,
                "PATH": "/hab/bin"
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "watch"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "add source",
            "cwd": "${workspaceFolder:hologit-debug-context}",
            "env": {
                "DEBUG": true,
                "PATH": "/hab/bin"
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "source",
                "add",
                "skeleton-v1",
                "https://github.com/JarvusInnovations/emergence-skeleton.git"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "checkout source",
            "cwd": "${workspaceFolder:hologit-debug-context}",
            "env": {
                "DEBUG": true,
                "PATH": "/hab/bin"
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "source",
                "checkout",
                "skeleton-v1"
            ]
        }
    ]
}