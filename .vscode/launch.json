{
    "version": "0.2.0",
    "configurations": [
        // {
        //     "type": "node",
        //     "request": "launch",
        //     "name": "Run AVA test",
        //     "program": "${workspaceFolder}/node_modules/ava/profile.js",
        //     "args": [
        //       "${file}"
        //     ],
        //     "skipFiles": [
        //         "<node_internals>/**/*.js"
        //     ]
        // },
        {
            "type": "node",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "name": "studio:project",
            "preLaunchTask": "studio-debug-project",
            "postDebugTask": "studio-killall",
            "port": 7092,
            "restart": true,
            "trace": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/src"
        },
        {
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "name": "init",
            "cwd": "${workspaceFolder:hologit-debug-context}",
            "env": {
                "DEBUG": "1"
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "init"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "name": "branch create gh-pages",
            "cwd": "${workspaceFolder:hologit-debug-context}",
            "env": {
                "DEBUG": "1"
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "branch",
                "create",
                "gh-pages",
                "--template=passthrough"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "name": "project",
            "cwd": "${workspaceFolder:hologit-debug-context}",
            "env": {
                "DEBUG": "1"
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "project",
                "--working",
                "--debug",
                "--commit-branch=gh-pages",

                // holobranch
                "gh-pages"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "name": "watch",
            "cwd": "${workspaceFolder:hologit-debug-context}",
            "env": {
                "DEBUG": "1"
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "watch"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "name": "source create",
            "cwd": "${workspaceFolder:hologit-debug-context}",
            "env": {
                "DEBUG": "1"
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "source",
                "create",
                "https://github.com/twbs/bootstrap"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "name": "checkout source",
            "cwd": "${workspaceFolder:hologit-debug-context}",
            "env": {
                "DEBUG": "1"
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "source",
                "checkout",
                "skeleton-v1"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "name": "fetch source",
            "cwd": "${workspaceFolder:hologit-debug-context}",
            "env": {
                "DEBUG": "1"
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "source",
                "fetch",
                "skeleton-v1"
            ]
        }
    ]
}